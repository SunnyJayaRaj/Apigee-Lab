<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description>Banking API Main Entry Point</Description>

    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>

    <Flows>
        <Flow name="GenerateAccessToken">
            <Description>Exchange credentials for a token</Description>
            <Request>
                <Step>
                    <Name>OAuth-Generate-Token</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/token") and (request.verb = "POST")</Condition>
        </Flow>

        <Flow name="GetAccountBalance">
            <Description>Retrieve sensitive data</Description>
            <Request>
                <Step>
                    <Name>OAuth-Verify-Token</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/balance") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>

    <HTTPProxyConnection>
        <BasePath>/bank-v1</BasePath>
        <Properties/>
    </HTTPProxyConnection>

    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
